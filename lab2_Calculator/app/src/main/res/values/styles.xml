<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_margin">7dp</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:minWidth">12dp</item>
        <item name="android:minHeight">12dp</item>
        <item name="android:autoSizeMaxTextSize">30dp</item>
        <item name="android:autoSizeMinTextSize">10dp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
